<%- include('partials/_head.ejs') %>
<section>
  <h1>
    <span>Super secret thief creation page !</span>
  </h1>
</section>
<section>
  <% if(error){ %>
    <section class="error">
      <h1>ERROR</h1>
      <p><%= error %></p>
    </section>
  <% } %>
  <form action="/register" method="POST" style="margin-top: 1em">
    <input type="text" placeholder="Enter your email" name="email" />
    <input type="text" placeholder="Enter your name" name="name" />
    <input type="text" placeholder="Enter your image path" name="imagePath" />
    <input type="password" placeholder="Enter your password" name="password" />
    <button>Create your vault</button>
  </form>
  
</section>


